<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626">

    <ImageView
        android:id="@+id/ImageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_beach_access_black_24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp" />

    <ImageView
        android:id="@+id/ImageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="디자인 해주신 당신만의 불꽃입니다."
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/text_selectedWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모험"
                android:textStyle="bold"
                android:textColor="#AAFFAA"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="의 의미가 담긴 아름다운 불꽃이네요!"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당신의 다채로운 삶의 색으로 디자인된\n한화서울세계불꽃축제를 기대해 주세요"
            android:textColor="#AAFFAA"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 입력하고 골든티켓과 불꽃쇼의 주인공이 되어보세요!"
            android:textColor="#FFCC99"
            android:textSize="10sp"
            android:layout_marginBottom="18dp"/>

        <Button
            android:id="@+id/btn_submit_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:text="이벤트 응모 완료하기"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</RelativeLayout>